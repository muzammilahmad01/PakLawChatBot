# Create or update .gitignore
cat > .gitignore << 'EOF'
# Environment variables (CRITICAL - contains API keys!)
.env
*.env

# Python cache
__pycache__/
*.py[cod]
*$py.class
*.so

# Virtual environments
venv/
env/
ENV/

# Vector stores (large binary files)
ChatBot/vectorstores/
vectorstores/

# Data files (PDFs are too large for Git)
data/
FYP_DATA/
*.pdf

# IDE files
.vscode/
.idea/
*.swp
*.swo

# Antigravity artifacts
.gemini/

# OS files
.DS_Store
Thumbs.db
EOF